{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        ".eslintrc.json"
    ],
    "rules": {
        "@typescript-eslint/dot-notation": "off",
        "@typescript-eslint/no-throw-literal": "off"
    }
}
